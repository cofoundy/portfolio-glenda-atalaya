---
import { siteConfig } from "../config";
---

<section id="education" class="relative py-16 sm:py-20 md:py-28 overflow-hidden" style={`background-color: ${siteConfig.colors.cream};`}>
  <div class="max-w-7xl mx-auto px-6 sm:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16">

      <!-- Left column: Education -->
      <div>
        <h2 class="font-editorial text-3xl sm:text-4xl md:text-5xl mb-8 sm:mb-12" style={`color: ${siteConfig.colors.dark};`}>
          <span class="sparkle text-xl mr-2">✦</span>
          <span style="font-family: 'Cormorant Garamond', serif; font-style: italic;">Educación</span>
        </h2>

        <div class="space-y-6 sm:space-y-8">
          {siteConfig.education.map((edu) => (
            <div class="flex items-start gap-4 sm:gap-6">
              <div class="flex items-center gap-2 sm:gap-3 shrink-0 pt-1">
                <span class="sparkle text-sm">✦</span>
                <span class="font-bold text-sm sm:text-base min-w-[100px]" style={`color: ${siteConfig.colors.orange};`}>
                  {edu.dateRange}
                </span>
              </div>
              <div>
                <h3 class="font-semibold text-base sm:text-lg" style={`color: ${siteConfig.colors.dark};`}>
                  {edu.school}
                </h3>
                <p class="text-sm text-gray-600">{edu.degree}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Right column: Skills -->
      <div class="relative">
        <h2 class="font-editorial text-3xl sm:text-4xl md:text-5xl mb-8 sm:mb-12" style={`color: ${siteConfig.colors.dark};`}>
          <span style="font-family: 'Cormorant Garamond', serif; font-style: italic;">Habilidades</span>
        </h2>

        <!-- Tool badges (like Ps, Ai icons in pin) -->
        <div class="mb-8">
          <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">Herramientas</p>
          <div class="flex flex-wrap gap-3">
            {siteConfig.skills.tools.map((tool) => (
              <div class="tool-badge" title={tool.name}>
                {tool.short}
              </div>
            ))}
          </div>
        </div>

        <!-- Skill pills -->
        <div>
          <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">Áreas</p>
          <div class="flex flex-wrap gap-3">
            {siteConfig.skills.areas.map((skill) => (
              <span class="skill-pill">{skill}</span>
            ))}
          </div>
        </div>

        <!-- RESUME watermark -->
        <div class="watermark -bottom-4 -right-8 opacity-[0.03]" style={`color: ${siteConfig.colors.green};`}>RESUME</div>
      </div>
    </div>
  </div>
</section>
