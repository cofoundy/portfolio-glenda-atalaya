---
import { siteConfig } from "../config";
---

<section id="experience" class="py-16 sm:py-20 md:py-28" style={`background-color: ${siteConfig.colors.cream};`}>
  <div class="max-w-7xl mx-auto px-6 sm:px-8">
    <!-- Dark green card -->
    <div class="rounded-2xl sm:rounded-3xl p-8 sm:p-10 md:p-14" style={`background-color: ${siteConfig.colors.green};`}>
      <h2 class="text-3xl sm:text-4xl md:text-5xl mb-10 sm:mb-14" style="font-family: 'Cormorant Garamond', serif; font-style: italic; color: white;">
        <span class="sparkle text-xl mr-2">✦</span>
        Experiencia
      </h2>

      <!-- Timeline -->
      <div class="space-y-8 sm:space-y-10 relative">
        <!-- Vertical line -->
        <div class="absolute left-[6px] top-2 bottom-2 w-px bg-white/20 hidden sm:block"></div>

        {siteConfig.experience.map((exp) => (
          <div class="flex items-start gap-4 sm:gap-8 relative">
            <!-- Star bullet -->
            <div class="shrink-0 relative z-10">
              <span class="sparkle text-sm sm:text-base">✦</span>
            </div>

            <!-- Content -->
            <div class="space-y-1.5 sm:space-y-2">
              <span class="text-sm font-bold" style={`color: ${siteConfig.colors.orange};`}>
                {exp.dateRange}
              </span>
              <h3 class="text-lg sm:text-xl font-bold text-white">
                {exp.title}
              </h3>
              <p class="text-sm sm:text-base text-white/60">
                {exp.company}
              </p>
              <p class="text-sm text-white/50 leading-relaxed max-w-lg">
                {exp.description}
              </p>
            </div>
          </div>
        ))}
      </div>

      <!-- Hashtag badges -->
      <div class="mt-10 sm:mt-14 flex flex-wrap gap-3">
        {siteConfig.hashtags.map((tag) => (
          <span class="hashtag" style="border-color: rgba(212, 131, 43, 0.6); color: rgba(212, 131, 43, 0.9);">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
