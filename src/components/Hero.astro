---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-white py-24 md:min-h-screen"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 1200px at 0% 0%, ${siteConfig.accentColor}40 0%, ${siteConfig.accentColor}25 20%, ${siteConfig.accentColor}10 40%, rgba(255, 255, 255, 0.3) 70%, rgba(255, 255, 255, 0.8) 90%, white 100%)`}
  >
  </div>
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full stroke-gray-200 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
  >
    <defs>
      <pattern
        x="50%"
        y={-1}
        id="hero-grid"
        width={200}
        height={200}
        patternUnits="userSpaceOnUse"
      >
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>
      <pattern
        id="social-symbols"
        x="0"
        y="0"
        width="400"
        height="400"
        patternUnits="userSpaceOnUse"
      >
        <text x="50" y="50" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="22" font-weight="600" transform="rotate(-15)">#</text>
        <text x="150" y="100" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="20" transform="rotate(10)">@</text>
        <text x="250" y="80" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="18" transform="rotate(-5)">â™¡</text>
        <text x="100" y="200" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="22" transform="rotate(15)">ðŸ“Š</text>
        <text x="300" y="180" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="20" transform="rotate(-10)">â–¶</text>
        <text x="200" y="250" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="24" transform="rotate(5)">âœ¦</text>
        <text x="50" y="320" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="18" transform="rotate(-8)">ðŸ’¬</text>
        <text x="350" y="300" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="22" transform="rotate(12)">ðŸ“±</text>
        <text x="150" y="350" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="20" transform="rotate(-15)">ðŸŽ¯</text>
        <text x="250" y="370" fill={siteConfig.accentColor} font-family="'Source Sans 3', sans-serif" font-size="24" transform="rotate(8)">âœŽ</text>
      </pattern>
    </defs>
    <rect
      fill="url(#social-symbols)"
      width="100%"
      height="100%"
      opacity="0.15"></rect>
    <rect
      fill="url(#hero-grid)"
      width="100%"
      height="100%"
      stroke-width={0}></rect>
  </svg>
  <div class="h-full mx-auto p-8 sm:p-12 md:p-24 flex items-center">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16 w-full">
      <!-- Photo -->
      <div class="shrink-0 animate-fade-in">
        <img
          src={`${import.meta.env.BASE_URL}/profile.jpg`}
          alt={siteConfig.name}
          class="w-40 h-40 sm:w-48 sm:h-48 md:w-56 md:h-56 rounded-full object-cover border-4 shadow-lg"
          style={`border-color: ${siteConfig.accentColor}40`}
        />
      </div>
      <!-- Text -->
      <div>
        <h2
          class="text-pretty text-xl sm:text-2xl md:text-4xl font-bold tracking-tight text-gray-700 animate-fade-in"
        >
          Â¡Hola!
        </h2>
        <h1
          class="mt-4 sm:mt-6 md:mt-8 text-pretty text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-bold tracking-tight text-gray-800 animate-fade-in animation-delay-200"
        >
          Soy <span style={{ color: siteConfig.accentColor }}
            >{siteConfig.name.split(' ')[0]}</span
          >
        </h1>
        <p
          class="mt-3 sm:mt-4 md:mt-6 text-pretty text-base sm:text-lg md:text-xl/8 font-medium text-gray-600 animate-fade-in animation-delay-400"
          style="font-family: 'Libre Baskerville', serif; font-style: italic;"
        >
          {siteConfig.title}
        </p>
      </div>
    </div>
  </div>
  <div
    class="absolute bottom-0 left-0 right-0 p-8 sm:p-12 md:p-24 flex gap-x-4 sm:gap-x-6 md:gap-x-8 text-gray-700 animate-fade-in animation-delay-600"
  >
    {
      siteConfig.social?.email && (
        <a
          href={`mailto:${siteConfig.social.email}`}
          aria-label="Email"
          class="transition-colors duration-300 hover:text-[var(--accent-color)]"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
            <path d="M3 7l9 6l9 -6" />
          </svg>
        </a>
      )
    }
    {
      siteConfig.social?.linkedin && (
        <a
          href={siteConfig.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="transition-colors duration-300 hover:text-[var(--accent-color)]"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M8 11v5" /><path d="M8 8v.01" /><path d="M12 16v-5" />
            <path d="M16 16v-3a2 2 0 1 0 -4 0" />
            <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
          </svg>
        </a>
      )
    }
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }
</style>
