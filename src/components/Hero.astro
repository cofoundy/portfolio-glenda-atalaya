---
import { siteConfig } from "../config";
---

<section id="hero" class="relative min-h-screen overflow-hidden" style={`background-color: ${siteConfig.colors.dark};`}>
  <!-- Sparkle decorations -->
  <span class="sparkle sparkle-animate absolute top-16 left-[15%] text-2xl sm:text-3xl animate-fade-in animation-delay-500">✦</span>
  <span class="sparkle sparkle-animate absolute top-32 right-[20%] text-xl animate-fade-in animation-delay-600">✦</span>
  <span class="sparkle sparkle-animate absolute bottom-40 left-[60%] text-lg animate-fade-in animation-delay-700">✦</span>

  <div class="max-w-7xl mx-auto px-6 sm:px-8 pt-24 pb-12 md:pt-28 md:pb-16 min-h-screen flex flex-col">
    <!-- Main hero content -->
    <div class="flex-1 grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Left: Photo + PORTFOLIO text -->
      <div class="relative animate-fade-in">
        <!-- PORTFOLIO stacked text -->
        <div class="text-stack absolute -top-4 -left-2 sm:left-0 z-0 select-none pointer-events-none">
          <span class="text-3xl sm:text-5xl md:text-7xl lg:text-8xl font-black tracking-tight" style={`color: ${siteConfig.colors.orange};`}>PORTFOLIO</span>
          <span class="text-3xl sm:text-5xl md:text-7xl lg:text-8xl font-black tracking-tight" style={`color: ${siteConfig.colors.orange};`}>PORTFOLIO</span>
          <span class="text-3xl sm:text-5xl md:text-7xl lg:text-8xl font-black tracking-tight" style={`color: ${siteConfig.colors.orange};`}>PORTFOLIO</span>
        </div>

        <!-- Photo -->
        <div class="relative z-10 mt-12 sm:mt-20 md:mt-24">
          <img
            src={`${import.meta.env.BASE_URL}/profile.jpg`}
            alt={siteConfig.name}
            class="w-48 h-60 sm:w-64 sm:h-80 md:w-72 md:h-96 object-cover object-top rounded-lg shadow-2xl"
          />
          <!-- Quote overlay on photo -->
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4 rounded-b-lg">
            <p class="text-xs sm:text-sm text-white/90 leading-relaxed font-light italic">
              {siteConfig.quote}
            </p>
          </div>
        </div>
      </div>

      <!-- Right: Social links + info -->
      <div class="flex flex-col justify-center gap-6 animate-fade-in animation-delay-300">
        <div class="space-y-3">
          <p class="text-white/60 text-sm tracking-widest uppercase">Social Media</p>
          <div class="space-y-2">
            {siteConfig.social?.email && (
              <p class="text-white text-base sm:text-lg">
                <span class="text-white/50 mr-2">✉</span>
                {siteConfig.social.email}
              </p>
            )}
            {siteConfig.social?.linkedin && (
              <p class="text-white text-base sm:text-lg">
                <span class="text-white/50 mr-2">LI:</span>
                <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" class="hover:underline" style={`color: ${siteConfig.colors.orange};`}>
                  /glendaatalayarondon
                </a>
              </p>
            )}
          </div>
        </div>

        <!-- Stats row -->
        <div class="grid grid-cols-2 gap-4 mt-4">
          {siteConfig.stats.map((stat) => (
            <div>
              <p class="text-2xl sm:text-3xl font-bold" style={`color: ${siteConfig.colors.orange};`}>{stat.value}</p>
              <p class="text-white/50 text-xs sm:text-sm mt-1">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Scroll down circle - bottom center -->
    <div class="flex justify-center mt-8 md:mt-0 animate-fade-in animation-delay-700">
      <a href="#about" class="scroll-circle">
        <span>Scroll</span>
        <span>down</span>
      </a>
    </div>
  </div>
</section>
