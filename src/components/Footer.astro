---
import { siteConfig } from "../config";
---

<footer class="relative py-12 sm:py-16" style={`background-color: ${siteConfig.colors.dark};`}>
  <div class="max-w-7xl mx-auto px-6 sm:px-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
      <!-- Left -->
      <div class="space-y-3">
        <h3 class="text-2xl sm:text-3xl font-bold text-white" style="font-family: 'Playfair Display', serif;">
          <span class="sparkle sparkle-animate text-lg mr-2">✦</span>
          {siteConfig.name}
        </h3>
        <p class="text-white/50 text-sm sm:text-base">{siteConfig.title}</p>
      </div>

      <!-- Right: social + nav -->
      <div class="flex flex-col items-start md:items-end gap-4">
        <div class="flex gap-4">
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="text-white/50 hover:text-white transition-colors text-sm"
              style={`--hover-color: ${siteConfig.colors.orange};`}
            >
              ✉ Email
            </a>
          )}
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="transition-colors text-sm"
              style={`color: ${siteConfig.colors.orange};`}
            >
              LI LinkedIn
            </a>
          )}
        </div>
        <p class="text-white/30 text-xs">
          &copy; {new Date().getFullYear()} {siteConfig.name}. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </div>
</footer>
