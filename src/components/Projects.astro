---
import { siteConfig } from "../config";
---

<section id="work" class="relative py-16 sm:py-20 md:py-28 overflow-hidden" style={`background-color: ${siteConfig.colors.cream};`}>
  <div class="max-w-7xl mx-auto px-6 sm:px-8">
    <h2 class="text-3xl sm:text-4xl md:text-5xl mb-10 sm:mb-14" style={`color: ${siteConfig.colors.dark};`}>
      <span class="sparkle text-xl mr-2">âœ¦</span>
      <span style="font-family: 'Cormorant Garamond', serif; font-style: italic;">Proyectos</span>
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {siteConfig.projects.map((project, index) => (
        <div class="group relative bg-white rounded-xl sm:rounded-2xl p-6 sm:p-8 border border-gray-200/50 card-hover overflow-hidden">
          <!-- Metric highlight -->
          <div class="mb-4">
            <span class="text-3xl sm:text-4xl font-black" style={`color: ${siteConfig.colors.orange};`}>
              {project.metric}
            </span>
            <p class="text-xs text-gray-500 mt-1">{project.metricLabel}</p>
          </div>

          <!-- Project name -->
          <h3 class="text-lg sm:text-xl font-bold mb-3" style={`color: ${siteConfig.colors.dark};`}>
            {project.name}
          </h3>

          <!-- Description -->
          <p class="text-sm text-gray-600 leading-relaxed mb-4">
            {project.description}
          </p>

          <!-- Skill tags -->
          <div class="flex flex-wrap gap-1.5">
            {project.skills.map((skill) => (
              <span class="px-2.5 py-1 text-xs font-medium rounded-md" style={`background-color: ${siteConfig.colors.dark}; color: white;`}>
                {skill}
              </span>
            ))}
          </div>

          <!-- Index number -->
          <span class="absolute top-4 right-4 text-6xl font-black opacity-[0.04] select-none pointer-events-none" style="font-family: 'Playfair Display', serif;">
            0{index + 1}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
